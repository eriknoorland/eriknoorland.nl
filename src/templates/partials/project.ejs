<% if (project.publish) { %>
  <li class="project">
    <% if (project.url) { %>
      <a
        href="<%= project.url %>"
        title="<%= project.title %>"
        class="project__link project__link--title <% if (project.openInDialog) { %>toggle-trigger<% } %>"
        <% if (project.url) { %>target="_blank" rel="noopener noreferrer"<% } %>
      >
    <% } %>
        <h3 class="project__title <% if (project.url) { %>project__title--has-link<% } %>">
          <%= project.title %>
        </h3>
    <% if (project.url) { %>
      </a>
    <% } %>

    <% if (project.url) { %>
      <a
        href="<%= project.url %>"
        title="<%= project.title %>"
        class="project__link <% if (project.openInDialog) { %>toggle-trigger<% } %>"
        <% if (project.url) { %>target="_blank" rel="noopener noreferrer"<% } %>
      >
    <% } %>
        <img
          data-src="/img/<%= project.thumbnail %>@1x.jpg"
          data-srcset="/img/<%= project.thumbnail %>@2x.jpg 2x"
          alt="<%= project.title %>"
          align="left"
          width="100"
          height="100"
          class="project__image"
          data-js-lazyload
        >
    <% if (project.url) { %>
      </a>
    <% } %>

    <p class="project__description">
      <%= project.description %>
    </p>

    <div class="project__content">
      <span class="project__content__loader loader"></span>
      <span class="project__content__close toggle-trigger"></span>
      <div class="project__content__inner"></div>
    </div>

    <p class="project__tags">
      <% project.tags.forEach((tag, index, tags) => { %>
        <%= tag %><%= (index !== tags.length - 1) ? ',' : '' %>
      <% }) %>
    </p>
  </li>
<% } %>
